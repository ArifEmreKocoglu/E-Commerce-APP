mixin createProduct(product)
 div.col-md-4
        div.card
            img(src=`/img/${product.imageUrl}`  alt=`${product.description}`).card-img-top
            div.card-body
                h4.card-title
                    a(href=`/products/${product.id}`) #{product.name}
                small.text-muted
                    i.fa.fa-try #{product.price}
            div.card-footer
                a(href=`/products/${product.id}`).btn.btn-outline-secondary.btn-sm Details
                a(href="#").btn.btn-outline-secondary.btn-sm.ml-3 Add to cart
